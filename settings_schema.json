{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "array",
  "items": {
    "type": "object",
    "properties": {
      "owner": {
        "type": "string"
      },
      "repo": {
        "type": "string"
      },
      "min_approvals":{
        "type": "integer"
      },
      "authors": {
        "type": "array",
        "items": {
          "type": "string"
        }
      },
      "requested_reviewers":{
        "type":"array",
        "items": {
          "type":"string"
        }
      },
      "paths": {
        "type": "array",
        "items": {
          "type": "string"
        }
      }
    },
    "required": ["owner", "repo"]
  }
}
